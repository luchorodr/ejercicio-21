<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("partials/stylesheets") %>

    <style>
      #seccionMedia {
        padding: 50px;
        background-color: #f5f5f5;
        display: flex;
        align-items: center;
        margin-bottom: 0;
      }
      .divArticuloHome {
      display: flex;
      flex-direction: column;
      align-items: center;
      }
      .tituloArticulo {
        width: 60%;
        font-family: "Open Sans";
        font-style: normal;
        font-weight: 800;
        font-size: 2rem;
        line-height: 2.5rem;
        text-align: left;
        text-decoration: none;
        color: black;

      }
      .fechaArticulo {
        width: 60%;
        font-family: "Lora";
        font-style: italic;
        font-weight: 400;
        font-size: 1rem;
        line-height: 1.2rem;
        color: #76757d;
        text-align: left;
      }

      .divisor {
        width: 75%;
        height: 0px;
        border: 1px solid #dee2e6;
      }
    </style>
    <title>Home</title>
  </head>
  <body>
    <%- include("partials/navbar") %> <%- include("partials/header") %>
    <section id="seccionMedia">
      <div class="container">

        <% for (let article of articles.reverse()) { %>
      
        <div class="divArticuloHome">
          <a href="/articulo/<%-article.id%> " class="tituloArticulo">
            <%= article.title %>
          </a>
          <small class="fechaArticulo">Creado por <%= article.user.firstname + " " + article.user.lastname  %>  el <%=article.createdAt.toLocaleDateString('es-ES',{year: 'numeric', month: 'long', day: 'numeric'}) %></small>
          <hr class="divisor" />
        </div>
        <% } %> 
        
      </div>
    </section>

    <%- include("partials/footer") %> <%- include("partials/scripts") %>
  </body>
</html>
